xcodeproj 'DDJDStoreSwift.xcodeproj'
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings! #去掉第三方警告
target ‘DDJDStoreSwift’ do
    pod 'Alamofire'       #网络请求(swift)
    pod 'ObjectMapper'    #一键json模型互转
    pod 'IQKeyboardManagerSwift'  #管理键盘
    pod 'SnapKit' #自动布局库，swift版
    pod 'SVProgressHUD'    #菊花动画
    pod 'XCGLogger' #日志管理类库
    pod 'BaiduMobStat'#百度统计
    pod 'SwiftyJSON' #json
    pod 'Kingfisher' #图片加载
    pod 'MJRefresh' #下拉刷新
    pod 'JPush' #极光推送
    pod 'iCarousel' #旋转木马效果
    pod 'WMPageController' #分页效果
    pod 'KMNavigationBarTransition'#一个用来统一管理导航栏转场以及当 push 或者 pop 的时候使动画效果更加顺滑的通用库，并且同时支持竖屏和横屏。你不用为这个库写一行代码，所有的改变都悄然发生。
    pod 'DZNEmptyDataSet'  #空视图提示
    pod 'WZLBadge' #小红点
    pod 'MLeaksFinder' #内存检测
    #rx
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'Moya/RxSwift'
    pod 'RxDataSources'
end

